<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingVertical="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/document"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="#676AF6"
            android:padding="12dp"
            android:src="@drawable/ic_file"
            app:layout_constraintEnd_toStartOf="@id/camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/document_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Document"
            app:layout_constraintEnd_toEndOf="@id/document"
            app:layout_constraintStart_toStartOf="@id/document"
            app:layout_constraintTop_toBottomOf="@id/document" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="#E15873"
            android:padding="12dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/camera_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Camera"
            app:layout_constraintEnd_toEndOf="@id/camera"
            app:layout_constraintStart_toStartOf="@id/camera"
            app:layout_constraintTop_toBottomOf="@id/camera" />

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="#A26FFF"
            android:padding="12dp"
            android:src="@drawable/ic_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/camera"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Gallery"
            app:layout_constraintEnd_toEndOf="@id/gallery"
            app:layout_constraintStart_toStartOf="@id/gallery"
            app:layout_constraintTop_toBottomOf="@id/gallery" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/audio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="#FF5722"
            android:padding="12dp"
            android:src="@drawable/ic_audio"
            app:layout_constraintEnd_toStartOf="@id/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Audio"
            app:layout_constraintEnd_toEndOf="@id/audio"
            app:layout_constraintStart_toStartOf="@id/audio"
            app:layout_constraintTop_toBottomOf="@id/audio" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="#009688"
            android:padding="12dp"
            android:src="@drawable/ic_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Location"
            app:layout_constraintEnd_toEndOf="@id/location"
            app:layout_constraintStart_toStartOf="@id/location"
            app:layout_constraintTop_toBottomOf="@id/location" />

        <ImageView
            android:id="@+id/contacts"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/circular_bg"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:src="@drawable/ic_person"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/location"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Contacts"
            app:layout_constraintEnd_toEndOf="@id/contacts"
            app:layout_constraintStart_toStartOf="@id/contacts"
            app:layout_constraintTop_toBottomOf="@id/contacts" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>