<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bg"
        android:backgroundTint="#F3F0F0"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:layout_marginEnd="80dp">

        <TextView
            android:id="@+id/left_chat_message_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Hi"
            android:padding="4dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/left_chat_timestamp_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#686868"
            android:gravity="center"
            android:text="6:40 am"
            android:padding="2dp"
            android:textSize="11sp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bg"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#B5E3BF"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginStart="80dp">

        <TextView
            android:id="@+id/right_chat_message_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Hi"
            android:padding="4dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/right_chat_timestamp_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#686868"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="bottom"
            android:text="6:40 am"
            android:padding="2dp"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/message_status_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:padding="2dp"
            android:src="@drawable/ic_time"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</RelativeLayout>