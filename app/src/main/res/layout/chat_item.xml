<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bg"
        android:backgroundTint="#F3F0F0"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:layout_marginEnd="80dp">

        <TextView
            android:id="@+id/left_chat_message_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="4dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/left_chat_timestamp_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#686868"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="11sp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bg"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#B5E3BF"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginStart="80dp">

        <TextView
            android:id="@+id/right_chat_message_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="4dp"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/right_img_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:padding="8dp"
            android:background="@drawable/image_msg_bg"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/right_chat_timestamp_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#686868"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="2dp"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/message_status_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:padding="2dp"
            android:visibility="visible"
            android:src="@drawable/ic_time"
            android:layout_gravity="bottom"
            app:tint="@color/grey" />

    </LinearLayout>

    <ImageView
        android:id="@+id/left_img_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/image_msg_bg"
        android:src="@drawable/ic_launcher_background"/>

</RelativeLayout>