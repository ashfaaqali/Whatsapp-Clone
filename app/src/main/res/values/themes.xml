<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WhatsappPlus" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#075E54</item> <!-- WhatsApp's green color -->
        <item name="colorPrimaryDark">#075E54</item> <!-- WhatsApp's green color -->
        <item name="colorAccent">#25D366</item> <!-- WhatsApp's green accent color -->
    </style>

    <style name="Theme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/botttom_sheet_exit</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">4dp</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/botttom_sheet_exit</item>
    </style>


    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape_rounded</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="circularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.WhatsappPlus" parent="Base.Theme.WhatsappPlus" />
</resources>